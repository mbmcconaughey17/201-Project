  <tr>
    <div class="col-xs-1">
    <th>App</th>
  </div>
    <th>Name</th>
    <th>Version</th>
    <th>Price</th>
    <th colspan="2"></th>
  </tr>
 
  <% @apps.each do |app| %>
<div class="yellow">
    <tr>
      <div class="value"><td><%= image_tag(app.ImageURL, :alt => "App Icon") %></td></div>
      
